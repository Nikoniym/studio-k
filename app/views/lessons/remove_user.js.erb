<% if @answer %>
  $(".write_user tr[data-id='<%=@user.id %>']").css('display','none');
  $(".ready_user").replaceWith("<%= escape_javascript(render('teachers/user_list')) %>");
  $('.table_name .place_current').text('<%= @lesson.place_current %>');
  $('.users_list .place_current:nth-child(1)').text( "На занятие записаны: <%= @lesson.users.count %>");
  $('.users_list .place_current:nth-child(2)').text( "Количество свободных мест: <%= @lesson.place_current %>");
  $(".paid_subscription").html("<%= escape_javascript(render ('lessons/paid')) %>");
<% end %>